<div class="container">
  <h1>New Game</h1>
  <div class="letter-container">
    <% @letters.each do |letter| %>
      <div><%= letter %></div>
    <% end %>
  </div>

  <form action="/score" method="POST">
    <label for="letter-game-input">What is the longest word you can find?</label>
    <input type="text" id="letter-game-input" name="letter-game-input" placeholder="Type here">
    <input type="submit" value="Let's go!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :data_letters, @letters %>
  </form>
</div>
